import tkinter as tk

# Function to update the display
def update_display(value):
    current_text = display.get()
    display.set(current_text + value)

# Function to calculate the result
def calculate():
    try:
        # Replace custom symbols with Python operators
        expression = display.get().replace("÷", "/").replace("×", "*")
        result = eval(expression)
        display.set(result)
    except Exception:
        display.set("Error")

# Function to clear the display
def clear_display():
    display.set("")

# Create the main window
root = tk.Tk()
root.title("Simple Calculator")

# Entry widget to display the result
display = tk.StringVar()
entry = tk.Entry(root, textvariable=display, font=("Helvetica", 24), justify="right")
entry.grid(row=0, column=0, columnspan=4, sticky="nsew")

# Button layout
buttons = [
    "C", "±", "%", "÷",
    "7", "8", "9", "×",
    "4", "5", "6", "-",
    "1", "2", "3", "+",
    "0", ".", "="
]

# Create buttons and add them to the grid
for i, button in enumerate(buttons):
    if button == "=":
        cmd = calculate
    elif button == "C":
        cmd = clear_display
    else:
        cmd = lambda value=button: update_display(value)

    btn = tk.Button(root, text=button, command=cmd, font=("Helvetica", 16))
    btn.grid(row=(i // 4) + 1, column=i % 4, sticky="nsew")

# Configure row and column weights
for i in range(5):
    root.grid_rowconfigure(i, weight=1)
for i in range(4):
    root.grid_columnconfigure(i, weight=1)

# Set the window size
root.geometry("400x600")

# Run the main loop
root.mainloop()
